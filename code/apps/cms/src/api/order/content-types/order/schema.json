{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "orders"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerEmail": {
      "type": "email",
      "required": true
    },
    "shippingAddress": {
      "type": "json",
      "required": true
    },
    "orderItems": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true
    },
    "tax": {
      "type": "decimal",
      "default": 0
    },
    "shipping": {
      "type": "decimal",
      "required": false,
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "statuses": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "paymentStatus": {
      "type": "enumeration",
      "default": "pending",
      "enum": [
        "pending",
        "paid",
        "failed",
        "refunded"
      ]
    },
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
